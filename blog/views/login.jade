extends layout

block content
	form.form-horizontal(method='post')
		fieldset
			legend 用户登录
			div.control-group
				label.control-label(for='username') 用户名
				div.controls
					input#username.input-xlarge(name='username')
			div.control-group
				label.control-label(for='password') 密码
				div.controls
					input#password.input-xlarge(name='password')
			div.form-actions
				button.btn.btn-primary(type='submit') 登录